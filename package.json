    "format": "prettier --write scripts tools",
    "prepare": "husky install"
  },
  "author": "Jose Miguel",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/jmblanco/media-automation-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/jmblanco/media-automation-toolkit/issues"
  },
  "homepage": "https://github.com/jmblanco/media-automation-toolkit#readme",
